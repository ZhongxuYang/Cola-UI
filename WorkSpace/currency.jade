extends ./_page

block body
    .v-box
        .box
            c-panel.show-on-ready(caption="查询条件")
                .content
                    c-form#queryForm(bind="condition")
                        fields.cols-3
                            field(property="currencyId")
                            field
                                label typeId
                                c-dropdown(c-bind="condition.typeId" valueProperty="name" textProperty="name" c-items="dictionary('11005')")
                            field(property="kind")
                        fields.cols-3
                            field(property="name")
                            field(property="symbol")
                            field
                                label source
                                c-dropdown(c-bind="condition.source" valueProperty="name" textProperty="name" c-items="dictionary('11007')")
                        fields.cols-3
                            field
                                label locale
                                c-dropdown(c-bind="condition.locale" valueProperty="name" textProperty="name" c-items="dictionary('11008')")
                            field
                                label isBook
                                c-toggle(c-bind="condition.isBook")
                            field(property="displayFormat")
                        fields.cols-3
                            field(property="label")
                            field
                                label sourceType
                                c-dropdown(c-bind="condition.sourceType" valueProperty="name" textProperty="name" c-items="dictionary('11006')")
                            field(property="businessType")
                        fields.cols-1
                            field
                                .center(style="margin:0 auto")
                                    c-button.primary(icon="search" caption="查询" click="query")
                                    c-button(caption="重置" click="reset")
            c-menu.secondary.bordered
                a(caption="添加" icon="plus" click="add")
                a(caption="删除" icon="minus" click="del")
                a(caption="编辑" icon="edit" click="edit")
                a(caption="保存" icon="save" click="save")
                .right.menu
                    c-pager.secondary.compact(bind="dataTypeItem")
        .flex-box
            div
                c-table#currencyTable.impact.striped(height="100%" sortMode="local" bind="dataTypeItem" dblclick="edit")
                    column($type="select" sortable="true")
                    column(property="currencyId" sortable="true")
                    column(property="typeId" sortable="true")
                    column(property="kind" sortable="true")
                    column(property="name" sortable="true")
                    column(property="isBook" sortable="true")
                    column(property="label" sortable="true")
                    column(property="symbol" sortable="true")
                    column(property="sourceType" sortable="true")
                    column(property="source" sortable="true")
                c-dialog#dialog(width="100%" height="100%" closeable="false" animation="slide left")
                    .content
                        c-menu.secondary.bordered
                            a.right(caption="关闭" click="back")
                        c-form#queryForm(bind="dataTypeItem")
                            fields.cols-3
                                field(property="currencyId")
                                field
                                    label typeId
                                    c-dropdown(c-bind="dataTypeItem.typeId" valueProperty="name" textProperty="name" c-items="dictionary('11005')")
                                field(property="kind")
                            fields.cols-3
                                field(property="name")
                                field(property="symbol")
                                field
                                    label source
                                    c-dropdown(c-bind="dataTypeItem.source" valueProperty="name" textProperty="name" c-items="dictionary('11007')")
                            fields.cols-3
                                field
                                    label locale
                                    c-dropdown(c-bind="dataTypeItem.locale" valueProperty="name" textProperty="name" c-items="dictionary('11008')")
                                field
                                    label isBook
                                    c-toggle(c-bind="dataTypeItem.isBook")
                                field(property="displayFormat")
                            fields.cols-3
                                field(property="label")
                                field
                                    label sourceType
                                    c-dropdown(c-bind="dataTypeItem.sourceType" valueProperty="name" textProperty="name" c-items="dictionary('11006')")
                                field(property="businessType")
                            fields.cols-1
                                field(property="description")
                            fields.cols-3
                                field(property="schemaName" readOnly="true")
                                field(property="partitionId" readOnly="true")
                                field(property="tenantId" readOnly="true")
                            fields.cols-3
                                field(property="setId" readOnly="true")
                                field(property="structureId" readOnly="true")
                                field(property="ownerUserId" readOnly="true")
                            fields.cols-3
                                field(property="createDate" readOnly="true")
                                field(property="createUserId" readOnly="true")
                                field(property="updateDate" readOnly="true")
                            fields.cols-3
                                field(property="updateUserId" readOnly="true")

append scripts
    script(src="type/Mine/currency.js")

